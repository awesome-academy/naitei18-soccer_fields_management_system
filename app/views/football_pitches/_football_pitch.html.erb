<li id="football_pitch-<%= football_pitch.id %>">
  <% if football_pitch.images[0].representable? %>
    <%= image_tag football_pitch.images[0].representation(resize_to_limit: [200, 200]) %>
  <% else %>
    <%= link_to rails_blob_path(file, disposition: "attachment") do %>
      <%= image_tag "placeholder.png", alt: "Download file" %>
    <% end %>
  <% end %>
  <span class="name">
    <%= link_to football_pitch.name, football_pitch %>
  </span>
  <span class="location">
    <span class="glyphicon glyphicon-map-marker"></span> <%= football_pitch.location %>
  </span>
  <span class="price">
    <span class="glyphicon glyphicon-usd"></span> <%= football_pitch.price_per_hour %>
  </span>
</li>
