<% provide(:title, "") %>
<div class="container">
  <h1><%= @football_pitch.name %></h1>
  <div class="col-md-4">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <% @football_pitch.images.length.times do |n| %>
          <% if n == 0 %>
            <li data-target="#myCarousel" data-slide-to="<%= n %>" class="active"></li>
          <% else %>
            <li data-target="#myCarousel" data-slide-to="<%= n %>"></li>
          <% end %>
        <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">

        <% @football_pitch.images.length.times do |i| %>
          <% if i == 0 %>
            <div class="item active">
              <%= image_tag @football_pitch.images[i].representation(resize_to_limit: [350, 350]) %>
            </div>
          <% else %>
            <div class="item">
              <%= image_tag @football_pitch.images[i].representation(resize_to_limit: [350, 350]) %>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="col-md-4">
    <div>
      <h3><%= t "football_pitch.info_football_pitch" %></h3>
      <div class="location">
          <span><b><%= FootballPitch.human_attribute_name("location") %></b>: <%= @football_pitch.location %></span>
      </div>
      <div class="price">
          <span><b><%= FootballPitch.human_attribute_name("price_per_hour") %></b>: <%= @football_pitch.price_per_hour %> Ä‘</span>
      </div>
    </div>
    <div>
      <h3><%= t "football_pitch_type.info_football_pitch_type" %></h3>
      <div class="location">
          <span><b><%= FootballPitchType.human_attribute_name("name") %></b>: <%= @football_pitch_type.name %></span>
      </div>
      <div class="length">
          <span><b><%= FootballPitchType.human_attribute_name("length") %></b>: <%= @football_pitch_type.length %> m</span>
      </div>
      <div class="width">
          <span><b><%= FootballPitchType.human_attribute_name("width") %></b>: <%= @football_pitch_type.width %> m</span>
      </div>
    </div>
  </div>
</div>
