<% provide :title, t("football_pitch.football_pitch_all") %>
<div class="row">
  <aside class="col-md-4">
  </aside>
  <div class="col-md-8">
    <% if @football_pitches.any? %>
      <h3><%= t "football_pitch.football_pitch_all" %></h3>
      <% if can? :create, FootballPitch %>
        <div class="create_football_pitch">
          <%= link_to "<button type=\"button\" class=\"btn btn-primary\">#{t "football_pitch.create_football_pitch"}</button>".html_safe, new_football_pitch_path %>
        </div>
      <% end %>
      <ol class="football_pitches">
        <%= render @football_pitches %>
      </ol>
    <% end %>
    <%== pagy_bootstrap_nav @pagy %>
  </div>
</div>
